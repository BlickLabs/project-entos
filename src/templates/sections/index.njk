  <div class="contact" id="section_contact">
    <h1 class="fs-giga gotham-black">Contact me</h1>
    <div class="contact-send-container">
      <div class="contact-line"></div>
      <div>
        <h3 class="fs-mega gotham-medium contact-subtitle">Send me your info</h3>
      </div>
    </div>
    <form class="contact-form" name="contact-entos" method="post" action="http://integrations.blick.mx/entos/contact/">
      <div class="contact-input-container">
        <div class="contact-input-content">
          <label class="fs-h2 gotham-medium contact-label" for="name">Name</label>
          <input class="fs-h2 contact-input gotham-book" type="text" id="name" name="name" required>
          <span class="focus-border"></span>
        </div>
      </div>
      <div class="contact-input-container">
        <div class="contact-input-content">
          <label class="fs-h2 gotham-medium contact-label" for="e-mail">E-mail</label>
          <input class="fs-h2 contact-input gotham-book" type="email" id="e-mail" name="email" required>
          <span class="focus-border"></span>
        </div>
      </div>
      <div>
        <button class="entos-button fs-h5 gotham-book" type="submit">Send</button>
