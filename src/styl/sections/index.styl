.site
  &-container
    background-color #3a3a3a

.top-section
  align-items center
  display flex
  flex-direction row
  justify-content flex-end
  margin-bottom 120px
  padding 46px 115px 0 0
  width 100%

  &-line
    background-color $eGrayStrong
    height 2px
    margin 0 28px 0 0
    width 44px

  &-icon
    height 13px

    &-container
      width 16px

      &:nth-child(3)
        margin 0 24px

.icon
  &-in
    width 13px

  &-twitter
    width 16px

  &-ok
    width 10px

.home
  margin-left 146px

  &-title
    &-container
      max-width 592px

  &-card
    background-image linear-gradient(88deg, #3d3d3d, #181818)
    box-shadow 0 2px 64px 0 rgba(0, 0, 0, 0.5)
    margin 145px 0 0 0
    padding 80px 119px
    position relative

    &-logo
      height 52px
      width 168px

      &-container
        position absolute
        right 70px
        top 70px

    &-info
      margin 30px 0 80px 0
      max-width 695px

      &-container
        display flex
        flex-direction row
        margin-top 60px

      &-line
        background-color $eWhite
        height 1px
        margin 32px 45px 0 0
        width 74px

.ventures
  background-image url("../img/backgrounds/ventures-background.jpg")
  background-position center
  background-repeat no-repeat
  background-size cover
  padding 80px 0 90px 146px
  position relative

  &-carousel
    margin-top 60px

  &-controls
    margin-top 97px

  &-navigation
    height 11px
    margin-right 26px
    width 24px

  &-card
    &-container
      display flex
      flex-direction column
      height 502px
      justify-content space-between
      width 354px

    &-content
      align-items center
      background-position center
      background-repeat no-repeat
      background-size cover
      cursor pointer
      display flex
      height 231px
      justify-content center
      position relative
      width 354px

      &:hover .ventures-card-hover
        opacity 1
        overflow auto
        transition 0.3s

    &-hover
      background-image url("../img/backgrounds/ventures-background-hover.png")
      background-position center
      background-repeat no-repeat
      background-size cover
      bottom 0
      left 0
      opacity 0
      padding 0 52px
      position absolute
      right 0
      top 0
      transition 0.3s

      &-paragraph
        color #585858
        letter-spacing 0.2px
        lin-height 30px

    &-logo
      &-ican
        height 104px
        width 135px !important

      &-dermagis
        height 84px
        width 136px !important 

      &-fadermex
        height 50px
        width 223px !important

      &-iidea
        height 29px
        width 113px !important

      &-clinical
        height 90px
        width 99px !important

      &-boxies
        height 80px
        width 80px !important

      &-higia
        height 70px
        width 112px !important

      &-homie
        height 140px
        width 140px !important

      &-peace
        height 70px
        width 138px !important

      &-pagamobil
        height 75px
        width 187px !important

  &-counter
    &-container
      align-items center
      bottom 108px
      display flex
      flex-direction row
      left 250px
      position absolute

    &-line
      background-color $eGrayStrong
      height 1px
      margin-right 24px
      width 74px

    &-slash
      margin 0 20px

    &-total
      color $eGrayStrong

.card
  &-ican
    background-image url("../img/site/card-ican.jpg")

  &-dermagis
    background-image url("../img/site/card-dermagis.jpg")

  &-fadermex
    background-image url("../img/site/card-fadermex.jpg")

  &-iidea
    background-image url("../img/site/card-iidea.jpg")

  &-clinical
    background-image url("../img/site/card-clinical.jpg")

  &-boxies
    background-image url("../img/site/card-boxies.jpg")

  &-higia
    background-image url("../img/site/card-higia.jpg")

  &-homie
    background-image url("../img/site/card-homie.jpg")

  &-peace
    background-image url("../img/site/card-peace.jpg")

  &-pagamobil
    background-image url("../img/site/card-pagamobil.jpg")

  &-special
    height 502px

.entos-button
  align-items center
  background-color #3d3d3d
  border solid 1px $eWhite
  cursor pointer
  display flex
  height 52px
  justify-content center
  padding 0 50px
