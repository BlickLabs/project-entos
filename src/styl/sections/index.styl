.site
  &-container
    padding-bottom 0

.top-section
  align-items center
  display flex
  flex-direction row
  justify-content flex-end
  margin-bottom 120px
  padding 46px 115px 0 0
  width 100%

  &-line
    background-color $eGrayStrong
    height 1px
    margin 0 28px 0 0
    opacity 0.5
    width 44px

  &-icon
    height 13px

    &-container
      width 16px

      &:nth-child(3)
        margin 0 24px

.icon
  &-in
    width 13px

  &-twitter
    width 16px

  &-ok
    width 10px

.home
  margin-left 146px

  &-title
    &-container
      max-width 600px

  &-card
    background-image url("../img/backgrounds/line-background.png"), linear-gradient(88deg, #3d3d3d, #181818)
    background-position top right
    background-repeat no-repeat
    background-size 44%, cover
    box-shadow 0 2px 64px 0 rgba(0, 0, 0, 0.5)
    margin 145px 0 0 0
    padding 80px 119px
    position relative

    &-container
      padding-bottom 175px

    &-logo
      height 52px
      width 168px

      &-container
        position absolute
        right 70px
        top 70px

    &-info
      margin 30px 0 80px 0
      max-width 695px

      &-container
        display flex
        flex-direction row
        margin-top 60px

      &-line
        background-color $eWhite
        height 1px
        margin 32px 45px 0 0
        opacity 0.5
        width 74px

.ventures
  background-image url("../img/backgrounds/ventures-background.jpg")
  background-position center
  background-repeat no-repeat
  background-size cover
  padding 80px 0 90px 146px
  position relative

  &-carousel
    margin-top 60px

  &-controls
    margin-top 97px

  &-navigation
    height 11px
    margin-right 26px
    width 24px

  &-card
    &-container
      display flex
      flex-direction column
      height 502px
      justify-content space-between
      width 354px

    &-content
      align-items center
      background-position center
      background-repeat no-repeat
      background-size cover
      cursor pointer
      display flex
      height 231px
      justify-content center
      position relative
      width 354px

      &:hover .ventures-card-hover
        opacity 1
        overflow auto
        transition 0.3s

    &-hover
      background-image url("../img/backgrounds/ventures-background-hover.png")
      background-position center
      background-repeat no-repeat
      background-size cover
      bottom 0
      left 0
      opacity 0
      padding 50px 52px
      position absolute
      right 0
      top 0
      transition 0.3s

      &-paragraph
        color #585858
        letter-spacing 0.2px
        lin-height 30px
        padding 50px 0

    &-logo
      &-ican
        height 104px
        width 135px !important

      &-dermagis
        height 84px
        width 136px !important 

      &-fadermex
        height 50px
        width 223px !important

      &-fadermex-hover
        height 74px
        width 150px !important

      &-iidea
        height 29px
        width 113px !important

      &-clinical
        height 90px
        width 99px !important

      &-boxies
        height 80px
        width 80px !important

      &-higia
        height 70px
        width 112px !important

      &-homie
        height 48px
        width 140px !important

      &-peace
        height 70px
        width 138px !important

      &-pagamobil
        height 45px
        width 187px !important

  &-counter
    &-container
      align-items center
      bottom 108px
      display flex
      flex-direction row
      left 250px
      position absolute

    &-line
      background-color $eGrayStrong
      height 1px
      margin-right 24px
      opacity 0.5
      width 74px

    &-slash
      margin 0 20px

    &-total
      color $eGrayStrong

.card
  &-ican
    background-image url("../img/site/card-ican.jpg")

  &-dermagis
    background-image url("../img/site/card-dermagis.jpg")

  &-fadermex
    background-image url("../img/site/card-fadermex.jpg")

  &-iidea
    background-image url("../img/site/card-iidea.jpg")

  &-clinical
    background-image url("../img/site/card-clinical.jpg")

  &-boxies
    background-image url("../img/site/card-boxies.jpg")

  &-higia
    background-image url("../img/site/card-higia.jpg")

  &-homie
    background-image url("../img/site/card-homie.jpg")

  &-peace
    background-image url("../img/site/card-peace.jpg")

  &-pagamobil
    background-image url("../img/site/card-pagamobil.jpg")

  &-special
    height 502px

.tweets
  background-image url("../img/backgrounds/twitter-background.png"), linear-gradient(94deg, #3b3b3b, #242424)
  background-position left
  background-repeat no-repeat
  background-size 90%, cover
  display flex
  flex-direction row
  justify-content space-between
  margin 175px 0 0 146px

  &-info
    &-container
      padding 50px 59px 0 90px

.twitter-timeline
  width 50% !important

.blog
  margin 150px 0 0 146px

  &-post
    &-container
      margin-top 85px

    &-content
      display flex
      flex-direction row
      margin 0 0 28px 0
      height 231px

    &-thumbnail
      background-position center
      background-repeat no-repeat
      background-size cover
      height 231px
      width 313px

    &-info
      &-container
        background-image linear-gradient(89deg, #3d3d3d, #181818)
        box-shadow 0 2px 64px 0 rgba(0, 0, 0, 0.5)
        display flex
        flex-direction column
        justify-content center
        padding 0 150px 0 64px
        width 646px

      &-span
        margin 0 10px

      &-title
        margin 12px 0 18px 0

      &-excerpt
        line-height 24px

      &-button
        height 38px !important
        padding 0 35px !important

        &-container
          margin-top 24px
          width 139px

.read-more
  display none

.contact
  background-image url("../img/backgrounds/line-background.png"), linear-gradient(89deg, #3d3d3d, #181818)
  background-position top right -183px, center
  background-repeat no-repeat
  background-size 65%, cover
  box-shadow 0 2px 64px 0 rgba(0, 0, 0, 0.5)
  margin 184px 0 0 106px
  padding 80px 50px 124px 155px

  &-subtitle
    font-size remify(38px)

  &-label
    color #b8b8b8
    font-size remify(20px)

  &-line
    background-color $eWhite
    height 1px
    margin-right 64px
    opacity 0.5
    width 74px

  &-send
    &-container
      align-items center
      display flex
      flex-direction row
      margin-bottom 40px
      margin-top 50px

  &-form
    margin-left 140px

  &-input
    background-color transparent
    border-bottom solid 1px #979797cc
    border-left none
    border-right none
    border-top none
    color $eWhite
    font-size remify(20px)
    padding-top 10px
    width 567px

    & ~ .focus-border
      bottom 0
      height 2px
      left 0
      position absolute
      width 100%
      z-index 99

    & ~ .focus-border:before,
    & ~ .focus-border:after
      content ""
      background-color $eBlackStrong
      bottom 0
      left 0
      height 100%
      position absolute
      width 0
      transition 0.4s

    & ~ .focus-border:after
      left auto
      right 0

    &:focus ~ .focus-border:before,
    &:focus ~ .focus-border:after
      transition 0.4s
      width 50%

    &-container
      margin-bottom 58px
      position relative

    &-content
      display flex
      flex-direction column
      position relative
      width 567px

.entos-button
  align-items center
  background-color #3d3d3d
  border solid 1px $eWhite
  cursor pointer
  display flex
  height 52px
  justify-content center
  padding 0 50px
  transition 0.3s

  &:hover
    background-color $eWhite
    border solid 1px #3d3d3d
    color #3d3d3d
    transition 0.3s

.tab-heading-01
  text-align center

label.error
  bottom -25px
  position absolute

@media screen and (min-width 1202px) and (max-width 1270px)
  .home-card
    padding-left 50px

@media screen and (min-width 769px) and (max-width 1370px)
  .home-card-logo-container
    right 30px
    top 25px

@media screen and (min-width 769px) and (max-width 1201px)
  .home
    margin-left 30px

    &-card
      padding 70px 30px

  .ventures
    padding-left 30px

  .tweets
    margin-left 30px

    &-info
      &-container
        padding-left 0

  .blog
    margin-left 30px

    &-post
      &-info
        &-container
          padding 0 30px

  .contact
    margin-left 30px
    padding-left 30px

    &-send
      &-container
        align-items flex-start
        flex-direction column
        margin-top 0

    &-line
      margin 40px 0

    &-form
      margin-left 0

@media screen and (max-width 768px)
  .top-section
    justify-content flex-end
    margin-bottom 70px
    padding 40px 30px 0 0

  .home
    margin-left 0
    margin-right 0

    &-title
      &-container
        margin 0 30px 18px 30px

    &-subtitle
      &-container
        margin 0 30px

    &-card
      margin-top 60px
      padding 120px 30px 50px 30px

      &-container
        padding-bottom 90px

      &-logo
        height 34px
        width 110px

        &-container
          right 30px
          top 30px

      &-info
        margin 30px 0 45px 0

        &-container
          flex-direction column
          margin-top 0

        &-line
          margin 40px 0 20px 0

  .ventures
    padding 50px 30px 40px 30px

    &-card
      &-content
        width 260px

      &-hover
        padding 40px 30px

    &-controls
      margin-top 50px

    &-counter
      &-container
        bottom 56px
        left 130px

      &-line
        width 35px

  .tweets
    background-size 100%
    flex-direction column
    margin 50px 0 0 0

    &-info
      &-container
        padding 45px 30px 50px 30px

  .twitter-timeline
    margin 0 auto
    width 80% !important

  .blog
    margin 70px 30px 0 30px

    &-post
      &-container
        margin-top 40px

      &-info
        &-container
          padding 20px 30px 30px
          width 100%

      &-content
        flex-direction column
        height auto

      &-thumbnail
        height 180px
        width 100%

  .contact
    margin 70px 0 0 0
    padding 50px 30px 60px 30px

    &-send
      &-container
        align-items flex-start
        flex-direction column
        margin 25px 0 45px 0

    &-subtitle
      font-size remify(34px)

    &-line
      display none
      //margin 30px 0

    &-form
      margin-left 0

    &-input
      width 260px

      &-container
        margin-bottom 40px

      &-content
        width 260px
