.navbar
  align-items center
  //background-color #3a3a3a
  border-right solid 2px rgba(26, 26, 26, 0.38)
  display flex
  flex-direction column
  height 100%
  left 0
  padding 48px 0
  position fixed
  top 0
  width 194px
  z-index 12

  &-logo
    height 98px
    width 79px

  &-links-container
    margin-top 40px

  &-link
    &-container
      align-items center
      display flex
      flex-direction column
      padding 25px 0

      &:hover
        .navbar-decorator
          display block

  &-decorator
    background-color $eWhite
    display none
    height 63px
    margin 30px 0
    width 1px

.active-decorator .navbar-decorator
  display block
