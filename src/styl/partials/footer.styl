.footer
  align-items center
  background-image linear-gradient(to right, rgba(58, 58, 58, 0.1), rgba(18, 18, 18, 1))
  bottom 0
  display flex
  flex-direction column
  height 582px
  justify-content center
  left 194px
  position absolute
  right 0

  &-logo
    height 103px
    width 82px

  &-section
    margin 0 30px

    &-container
      margin 80px 0 60px 0

      & a:hover span
        color $eWhite
        transition 0.3s

  &-icons
    &-container
      display flex
      flex-direction row

  &-icon
    height 20px
    width auto

    &-container
      &:nth-child(2)
        margin 0 36px

.active-footer
  color red !important

@media screen and (max-width 900px)
  .footer
    left 0

    &-section
      &-container
        display flex
        flex-wrap wrap
        justify-content center

        & a:nth-child(-n + 2)
          margin-bottom 20px
